{
  "name": "typescript-react-base",
  "version": "1.0.0",
  "description": "react typescript webpack2",
  "author": "hbqhbq123@qq.com",
  "keywords": [
    "webpack3",
    "typescript",
    "react",
    "frontend"
  ],
  "scripts": {
    "clean": "rimraf dist build",
    "tsc": "npm run clean && tsc",
    "start:size": "better-npm-run start:size",
    "start": "better-npm-run start",
    "open:dist": "lite-server --config ./dev-config/lite-server-config.json ",
    "build": "better-npm-run build:dev",
    "build:dev": "better-npm-run build:dev",
    "build:prod": "better-npm-run build:prod",
    "tree:dir": "treee -l 2 --ignore node_modules/,.git/",
    "lint": "tslint ./src/**/*.ts"
  },
  "betterScripts": {
    "start": {
      "command": "better-npm-run dev"
    },
    "start:size": {
      "command": "better-npm-run dev",
      "env": {
        "NODE_ENV": "production",
        "analysis": "1",
        "description": "运行构建后会自动打开包分析"
      }
    },
    "dev": {
      "command": "webpack-dev-server --config ./dev-config/webpack.config.ts --progress --hot ",
      "env": {
        "NODE_ENV": "development",
        "IS_PROXY": true
      }
    },
    "build": {
      "command": "webpack --config ./dev-config/webpack.config.ts --progress --hide-modules --display-error-details"
    },
    "build:dev": {
      "command": "better-npm-run build",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "better-npm-run build",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "classnames": "^2.2.5",
    "fastclick": "^1.0.6",
    "history": "^4.7.2",
    "moment": "^2.18.1",
    "normalize.css": "^7.0.0",
    "qrcode": "^0.9.0",
    "qs": "^6.5.0",
    "react": "^16.0.0",
    "react-dom": "16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.28",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.7",
    "@types/react-router-dom": "^4.0.8",
    "@types/webpack": "^3.0.10",
    "@types/webpack-env": "^1.13.1",
    "autoprefixer": "^7.1.5",
    "awesome-typescript-loader": "^3.2.3",
    "better-npm-run": "0.0.14",
    "bitbar-webpack-progress-plugin": "^0.1.3",
    "clean-webpack-plugin": "^0.1.17",
    "cli-color": "^1.2.0",
    "compression-webpack-plugin": "^0.3.2",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "0.23.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "globby": "^6.1.0",
    "html-webpack-plugin": "^2.30.1",
    "less": "2.7.1",
    "less-loader": "2.2.3",
    "lite-server": "^2.3.0",
    "postcss-loader": "^2.0.8",
    "postcss-px2rem": "^0.3.0",
    "progress-webpack-plugin": "^0.0.12",
    "prop-types": "^15.6.0",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "react-hot-loader": "next",
    "require-dir": "^0.3.1",
    "rimraf": "^2.6.1",
    "script-ext-html-webpack-plugin": "^1.8.5",
    "source-map-loader": "^0.2.1",
    "strip-loader": "^0.1.2",
    "style-loader": "0.13.1",
    "stylefmt": "^6.0.0",
    "stylefmt-loader": "^1.2.3",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "tree-cli": "^0.4.12",
    "ts-loader": "^2.3.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.4.3",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.5.3",
    "url-loader": "0.5.7",
    "web-dev-server": "^1.1.1",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.1"
  },
  "engines": {
    "node": ">=7.6"
  },
  "repository": "https://github.com/githbq/hbq-typescript-react-boilerplate.git",
  "license": "MIT"
}
